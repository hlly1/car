<% provide(:title, @location.name) %>

<h1 class = "text-center"><%= @location.name %></h1><br><br>
<div class = "row"><div class = "col-sm-3"></div>
<div class = "col-sm-6">
<% @location.vehicles.each do |vehicle| %>
<div class="card shadow text-center">
  <%= image_tag("https://images.unsplash.com/photo-1539713904642-b4d144f769d9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80", size:"200") %>
  <div class="card-body">
  <h5 class="card-title"><%= vehicle.name %></h5>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= vehicle.detail %></li>
    <li class="list-group-item"><%= vehicle.price %></li>
    <% if vehicle.statu == 1 %>
    <li class="list-group-item"><%= "Avaliable" %></li>
    <% else %>
    <li class="list-group-item"><%= "Ordered" %></li>
    <%end%>
    <li class="list-group-item align-center"><a href="#" class="btn btn-outline-primary">Order Now!</a></li>
  </ul>
  </div>
</div><br><br>
<% end %>
</div>
</div>