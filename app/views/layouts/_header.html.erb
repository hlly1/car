<header class="navbar navbar-light bg-info">

  <div class = "container">
    
    
    
    
      <%= link_to "MOCAR", root_path, id: "logo" %>
      
      <div style = "float:right">
        <%= link_to "Home", root_path, :class => "btn btn-success btn-sm" %>
        <% if logged_in? %>
      <%= link_to current_user.name, user_url(current_user.id), :class => "btn btn-success btn-sm" %>
     
      <%= link_to "Logout", logout_path, :method => :delete ,:class => "btn btn-success btn-sm" %>
      <% else %>
     
        
        <%= link_to "Login", login_path, :class => "btn btn-success btn-sm" %>
        
        <%= link_to "Signup", signup_path, :class => "btn btn-success btn-sm" %>
      
      <% end %>
      </div>
      
    </div>
    
    
  </div>


  
  
  

</header>